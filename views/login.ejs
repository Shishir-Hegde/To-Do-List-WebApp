<%- include('partials/header.ejs'); -%>
<main>
    <div class="box">
        <h1 id="heading">Login</h1>
        <form id="authForm" method="POST">
            <div class="item">
                <input type="text" name="username" placeholder="Username" required>
            </div>
            <div class="item">
                <input type="password" name="password" placeholder="Password" required>
            </div>
            <div class="item">
                <button type="submit" class="action-button" onclick="submitForm('/login')">Login</button>
            </div>
            <div class="item">
                <button type="submit" class="action-button" onclick="submitForm('/register')">Register</button>
            </div>
        </form>
    </div>
    <p><%= locals.err ? err : null %></p>
</main>
<%- include('partials/footer.ejs'); -%>

<script>
function submitForm(action) {
    const form = document.getElementById('authForm');
    form.action = action;
}
</script>
